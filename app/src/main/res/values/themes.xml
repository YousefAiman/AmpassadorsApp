<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AmpassadorsApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/light_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.AmpassadorsApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/black</item>
        <item name="fullscreenTextColor">@color/white</item>
    </style>

    <style name="Theme.AmpassadorsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AmpassadorsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AmpassadorsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="progressBarGreen" parent="@style/Theme.AmpassadorsApp">
        <item name="colorAccent">@color/light_green</item>
    </style>


    <style name="floatingGreenTheme" parent="Theme.AmpassadorsApp">
        <item name="colorSecondary">@color/dark_green</item>
    </style>
    <style name="progressBarRed" parent="@style/Theme.AmpassadorsApp">
        <item name="colorAccent">@color/red</item>
    </style>

</resources>