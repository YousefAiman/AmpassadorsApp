<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ComplaintsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/com_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/segoe_ui_light"
        android:text="@string/title"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/title_com"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_design"
        android:fontFamily="@font/segoe_ui_light"
        android:gravity="center"
        android:hint="@string/com_title"
        android:inputType="text"
        android:paddingRight="5dp"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/defendant"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_text_design"
        android:fontFamily="@font/segoe_ui_light"
        android:gravity="center"
        android:hint="@string/defendant"
        android:inputType="text"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="@+id/title_com"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/title_com"
        app:layout_constraintTop_toBottomOf="@+id/title_com" />

    <EditText
        android:id="@+id/subject"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/edit_text_design"
        android:fontFamily="@font/segoe_ui_light"
        android:gravity="start"
        android:hint="@string/subject"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:paddingEnd="20dp"
        android:textColor="#000"
        app:layout_constraintBottom_toTopOf="@+id/sendd"
        app:layout_constraintEnd_toEndOf="@+id/defendant"
        app:layout_constraintStart_toStartOf="@+id/defendant"
        app:layout_constraintTop_toBottomOf="@+id/defendant" />

    <android.widget.Button
        android:id="@+id/sendd"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/publish_btn_back"
        android:fontFamily="@font/segoe_ui"
        android:text="@string/send_btn"
        android:textAllCaps="false"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>