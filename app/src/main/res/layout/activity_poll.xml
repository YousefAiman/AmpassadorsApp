<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activities.PollActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:navigationIcon="@drawable/back_arrow_green"
        app:navigationContentDescription="navigate back"
        android:layout_height="?actionBarSize"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="انشاء موضوع"
        android:fitsSystemWindows="true"
        app:titleTextColor="@color/light_green"
        app:titleTextAppearance="@style/ToolbarTitleAppearanceEnd"/>

    <ScrollView
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_green"
        app:layout_constraintTop_toTopOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:src="@color/white"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/light_green"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view5" />

    <TextView
        android:id="@+id/usernameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/segoe_ui_bold"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/circleImageView"
        app:layout_constraintEnd_toStartOf="@+id/circleImageView"
        app:layout_constraintTop_toTopOf="@+id/circleImageView" />

    <android.widget.Button
        android:id="@+id/pulibshBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/publish_btn_back"
        android:elevation="4dp"
        android:layout_marginStart="20dp"
        android:text="نشر"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/segoe_ui_bold"
        app:layout_constraintBottom_toBottomOf="@+id/circleImageView"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_design"
        android:hint="اطرح سؤال..."
        android:paddingVertical="5dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/poll_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="30dp"
        app:layout_constraintWidth_percent="0.75"
        app:cardElevation="4dp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:strokeColor="#7CB498"
        app:strokeWidth="1.5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="50dp"
                android:paddingHorizontal="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_design"
                    android:hint="الخيار 1"
                    android:layout_marginStart="25dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="3dp"
                    />


                <LinearLayout
                    android:id="@+id/addLinear"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/addIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_add"
                        />

                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_design"
                        android:hint="الخيار 2"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="3dp"
                        />



                </LinearLayout>


            </LinearLayout>


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/medium_grey"
                android:layout_below="@id/linearLayout"
                />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui_bold"
                android:layout_below="@id/view"
                android:layout_marginTop="6dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="21dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="مدة الاستطلاع"
                />


            <TextView
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui"
                android:layout_below="@id/text"
                android:layout_marginTop="8dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="21dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="ضبط"
                />

        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poll_card">

        <android.widget.Button
            android:id="@+id/vedio_btn_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_design_post"
            android:drawableStart="@drawable/greenbttn"
            android:paddingLeft="30dp" />

        <android.widget.Button
            android:id="@+id/poll_btn_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_design_post"
            android:drawableStart="@drawable/pdf"
            android:paddingLeft="30dp" />

        <android.widget.Button
            android:id="@+id/pdf_btn_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_design_post"
            android:drawableStart="@drawable/pdf"
            android:paddingLeft="30dp" />

        <android.widget.Button
            android:id="@+id/image_btn_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_design_post"
            android:drawableStart="@drawable/pdf"
            android:paddingLeft="30dp" />


    </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>