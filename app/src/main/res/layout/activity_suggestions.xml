<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SuggestionsActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_sug"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1B5E20"
        android:fontFamily="@font/segoe_ui_bold"
        android:paddingTop="10sp"
        android:text="Suggestions"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="305dp"
        android:layout_height="77dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/segoe_ui_light"
        android:text="we would like to hear from you"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/defendant"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:background="@drawable/edit_text_design"
        android:fontFamily="@font/segoe_ui_light"
        android:hint="عنوان الاقتراح"
        android:textColor="#000"
        android:padding="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="30dp"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/subject"
        android:layout_width="372dp"
        android:layout_height="248dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_text_design"
        android:fontFamily="@font/segoe_ui_light"
        android:hint="الموضوع"
        android:gravity="top"
        android:paddingRight="15dp"

        android:textColor="#000"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/defendant"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/defendant"
        app:layout_constraintTop_toBottomOf="@+id/defendant" />

    <android.widget.Button
        android:id="@+id/send"
        android:layout_width="138dp"
        android:layout_height="34dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/publish_btn_back"
        android:text="Send"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:fontFamily="@font/segoe_ui"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/subject"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/subject"
        app:layout_constraintTop_toBottomOf="@+id/subject"
        app:layout_constraintVertical_bias="0.2" />
</androidx.constraintlayout.widget.ConstraintLayout>