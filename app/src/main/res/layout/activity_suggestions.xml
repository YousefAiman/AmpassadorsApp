<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SuggestionsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_sug"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="305dp"
        android:layout_height="77dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/segoe_ui_light"
        android:text="@string/title"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/defendant"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="44dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:background="@drawable/edit_text_design"
        android:fontFamily="@font/segoe_ui_light"
        android:hint="@string/suggest_title"
        android:inputType="text"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/subject"
        android:layout_width="372dp"
        android:layout_height="248dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_design"
        android:fontFamily="@font/segoe_ui_light"

        android:hint="@string/subject"
        android:inputType="textMultiLine"
        android:gravity="start"
        android:paddingTop="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingRight="15dp"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="@+id/defendant"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/defendant"
        app:layout_constraintTop_toBottomOf="@+id/defendant" />

    <android.widget.Button
        android:id="@+id/send"
        android:layout_width="138dp"
        android:layout_height="34dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/publish_btn_back"
        android:text="@string/send_btn"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:fontFamily="@font/segoe_ui"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/subject"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/subject"
        app:layout_constraintTop_toBottomOf="@+id/subject"
        app:layout_constraintVertical_bias="0.2" />
</androidx.constraintlayout.widget.ConstraintLayout>