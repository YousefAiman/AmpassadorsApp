    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_transparent"
    tools:context=".Fragments.ImageFullScreenFragment">

    <ImageView
        android:id="@+id/fullScreenIv"
        android:layout_width="match_parent"
