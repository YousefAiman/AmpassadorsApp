<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_grey"
    android:layout_margin="3dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contributorImageIv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:civ_border_color="@color/dark_green"
        app:civ_border_width="1dp"
        android:src="@color/white"
        android:layout_marginVertical="11dp"
        android:layout_marginStart="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.22" />

    <TextView
        android:id="@+id/contributorNameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/segoe_ui"
        android:textAlignment="viewStart"
        android:layout_marginEnd="5dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textColor="@color/black_transparent"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/contributorImageIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/contributorImageIv"
        app:layout_constraintTop_toTopOf="@+id/contributorImageIv" />

</androidx.constraintlayout.widget.ConstraintLayout>