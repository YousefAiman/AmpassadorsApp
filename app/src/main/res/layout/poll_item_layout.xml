<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="13dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/home_item_post_news_back"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageIv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="19dp"
        android:src="@color/white"
        app:civ_border_color="@color/light_green"
        app:civ_border_width="1dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.15" />

    <TextView
        android:id="@+id/usernameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/segoe_ui_bold"
        android:textColor="#060606"
        android:layout_marginEnd="15dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/imageIv"
        app:layout_constraintTop_toTopOf="@+id/imageIv" />


    <TextView
        android:id="@+id/dateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/segoe_ui"
        android:layout_marginTop="2dp"
        android:textColor="#060606"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageIv"
        app:layout_constraintEnd_toStartOf="@+id/imageIv"
        app:layout_constraintTop_toBottomOf="@+id/usernameTv" />


    <ImageView
        android:id="@+id/menuIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/menu_icon"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageIv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageIv" />

    <TextView
        android:id="@+id/questionTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/segoe_ui_bold"
        android:textColor="#060606"
        android:textSize="15sp"
        android:layout_marginStart="19dp"
        app:layout_constraintEnd_toEndOf="@+id/imageIv"
        app:layout_constraintStart_toEndOf="@+id/imageIv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageIv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pollRv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_constraintWidth_percent=".705"
        app:layout_constraintTop_toBottomOf="@id/questionTv"
        app:layout_constraintEnd_toEndOf="@id/questionTv"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:scrollbars="none"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/votesTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/segoe_ui_light"
        android:textColor="@color/black_transparent"
        android:textSize="18sp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pollRv" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/medium_grey"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/votesTv" />

    <View
        android:id="@+id/view4"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:background="@color/medium_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/votesTv" />

    <TextView
        android:id="@+id/likeTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="اعجبني"
        android:gravity="center"
        android:layout_marginVertical="12dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/view4" />


    <TextView
        android:id="@+id/commentTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="تعليق"
        android:gravity="center"
        android:layout_marginVertical="12dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view4" />


</androidx.constraintlayout.widget.ConstraintLayout>

