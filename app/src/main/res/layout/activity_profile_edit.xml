<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_b"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <com.google.android.material.navigation.NavigationView

        android:id="@+id/navigationview_b"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_marginTop="55dp"
        android:background="@color/black"
        app:itemTextColor="@color/white"
        app:headerLayout="@layout/layout_navegation_header"
        android:layout_gravity="start"/>



    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.profile.edit">

        <include
            android:id="@+id/toolbar"
            layout="@layout/bar_layout"/>

        <ImageView
            android:id="@+id/image_menu_b"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_baseline_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white"
            tools:ignore="MissingConstraints" />
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/title_profile_b"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:text="Profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/notification_b"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/notification_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/options_b"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/dots_more_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.97"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white"
            tools:ignore="MissingConstraints" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/profile_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.050000012" />
        <EditText
            android:padding="10dp"
            android:id="@+id/input_username"
            android:layout_width="269dp"
            android:layout_height="42dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/profile_shape"
            android:drawableLeft="@drawable/ic_baseline_person"
            android:ems="10"
            android:hint=" UserName"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/profile_picture" />

        <EditText
            android:id="@+id/imput_password"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/profile_shape"
            android:drawableLeft="@drawable/ic_baseline_lock"
            android:ems="10"
            android:hint=" Password"
            android:inputType="textPassword"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/input_username"
            app:layout_constraintStart_toStartOf="@+id/input_username"
            app:layout_constraintTop_toBottomOf="@+id/input_username" />
        <EditText
            android:id="@+id/imput_repassword"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/profile_shape"
            android:drawableLeft="@drawable/ic_baseline_lock"
            android:ems="10"
            android:hint=" Confirm Password"
            android:inputType="textPassword"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/imput_password"
            app:layout_constraintStart_toStartOf="@+id/imput_password"
            app:layout_constraintTop_toBottomOf="@+id/imput_password" />


        <EditText
            android:id="@+id/input_email"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/profile_shape"
            android:drawableLeft="@drawable/ic_baseline_email"
            android:ems="10"
            android:hint=" Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/imput_repassword"
            app:layout_constraintStart_toStartOf="@+id/imput_repassword"
            app:layout_constraintTop_toBottomOf="@+id/imput_repassword" />

        <EditText
            android:id="@+id/input_country"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/profile_shape"
            android:drawableLeft="@drawable/ic_baseline_home"
            android:ems="10"
            android:hint=" Country"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/input_email"
            app:layout_constraintStart_toStartOf="@+id/input_email"
            app:layout_constraintTop_toBottomOf="@+id/input_email" />

        <EditText
            android:id="@+id/input_city"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/profile_shape"
            android:drawableLeft="@drawable/ic_baseline_place"
            android:ems="10"
            android:hint=" City"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/input_country"
            app:layout_constraintStart_toStartOf="@+id/input_country"
            app:layout_constraintTop_toBottomOf="@+id/input_country" />

        <EditText
            android:id="@+id/input_phone"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/profile_shape"
            android:drawableLeft="@drawable/ic_baseline_phone"
            android:ems="10"
            android:hint=" Phone"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/input_city"
            app:layout_constraintStart_toStartOf="@+id/input_city"
            app:layout_constraintTop_toBottomOf="@+id/input_city" />

        <Button
            android:id="@+id/sign_up_btn"
            android:layout_width="147dp"
            android:layout_height="47dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_bg"
            android:text="Save"
            app:backgroundTint="@color/design_default_color_error"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/input_phone"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@+id/input_phone"
            app:layout_constraintTop_toBottomOf="@+id/input_phone"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
  </androidx.drawerlayout.widget.DrawerLayout>