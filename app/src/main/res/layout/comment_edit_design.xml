<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@drawable/messaging_layout_back"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="7dp"
    android:gravity="center_vertical"
    android:layout_gravity="bottom"
    android:paddingBottom="7dp"
    android:orientation="horizontal"
    >
    <EditText
        android:id="@+id/comment_text_ed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="write comments"
        android:background="@drawable/messaging_ed_back"
        android:fontFamily="@font/segoe_ui_light"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="7dp"
        android:paddingBottom="10dp"
        android:importantForAutofill="no"
        android:inputType="textShortMessage"
        android:layout_marginEnd="10dp" />
    <ImageView
        android:id="@+id/send_comment_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:visibility="visible"
        android:src="@drawable/send_icon"
        android:contentDescription="send_comments"
        />
</LinearLayout>